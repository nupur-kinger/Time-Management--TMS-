<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">asdf1234</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/time_management</property>
		<property name="show_sql">true</property>
		<property name="format_sql">false</property>
		<mapping class="com.tms.hibernate.model.Task" />
		<mapping class="com.tms.hibernate.model.Employee" />
		<mapping class="com.tms.hibernate.model.Login" />
	</session-factory>
</hibernate-configuration>